<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>intcanopy</object-name>
    <object-name>inttour</object-name>
    <object-name>planchet</object-name>
    <object-name>cache</object-name>

    <!-- Objets transparents -->
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Heinkel-He-280/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.570 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.190 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Heinkel-He-280/Models/Interior/Panels/panel.xml</path>
    <offsets>
      <x-m> -2.12267 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.27384 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntAllCanopy</name>
    <object-name>intcanopy</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntAllCanopy</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 1 </ind><dep> 1.23 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

